<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="dashkudov.feetmonitor.presentation.fragments.settings.SettingsFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/AppTheme.TextAppearance.Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/common" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_divider_height"
            android:background="#434343" />

        <dashkudov.feetmonitor.presentation.custom.SettingsButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/icon_fullscreen"
            android:text="Полноэкранный режим" />

        <dashkudov.feetmonitor.presentation.custom.SettingsButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/icon_notifications"
            android:text="Уведомления" />

        <dashkudov.feetmonitor.presentation.custom.SettingsButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/icon_auto_reconnection"
            android:text="Автоподключение" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>